{
    "keyboard_name": "frankie_macropad",
    "manufacturer": "Eric Wood",
    "url": "https://github.com/eric-wood/macro-pad",
    "maintainer": "eric-wood",
    "usb": {
        "vid": "0xF00D",
        "pid": "0x0000",
        "device_version": "0.0.1"
    },
    "matrix_pins": {
        "cols": ["B3", "B4", "B5", "B6"],
        "rows": ["B0", "B1", "B2"]
    },
    "diode_direction": "COL2ROW",
    "encoder": {
        "rotary": [
            {"pin_a": "D0", "pin_b": "D1"},
            {"pin_a": "D2", "pin_b": "D3"}
        ]
    },
    "bootmagic": {
        "matrix": [2, 0]
    },
    "processor": "atmega16u2",
    "bootloader": "atmel-dfu",
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 2], "x": 2, "y": 0},
                {"matrix": [0, 3], "x": 3, "y": 0},

                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1},
                {"matrix": [1, 2], "x": 2, "y": 1},
                {"matrix": [1, 3], "x": 3, "y": 1},

                {"matrix": [2, 0], "x": 0, "y": 2},
                {"matrix": [2, 1], "x": 1, "y": 2},
                {"matrix": [2, 2], "x": 2, "y": 2},
                {"matrix": [2, 3], "x": 3, "y": 2}
            ]
        }
    }
}
