    "maintainer": "wlhlm",

    "usb": {
        "vid": "0x7E09",
        "pid": "0xF980",
        "device_version": "2.0.0",

        "max_power": 100
    },

    "processor": "STM32F401",
    "bootloader": "stm32-dfu",

    "features": {
        "bootmagic": true,
        "command": true,
        "extrakey": true,
        "nkro": true,

        "mousekey": false,
        "console": false,
        "backlight": false,
        "audio": false
    },

    "eeprom": {
        "driver": "i2c"
    },

    "build": {
        "lto": true
    },

    "matrix_size": {
        "rows": 8,
        "cols": 16
    },

    "debounce": 0,

    "bootmagic": {
        "matrix": [0, 13]
    },

    "indicators": {
        "num_lock": "A3",
        "caps_lock": "A2",
        "scroll_lock": "A1"
    },

