{
    "keyboard_name": "L-PAD",
    "manufacturer": "Laneware Peripherals",
    "maintainer": "qmk",
    "usb": {
        "vid": "0x4C50",
        "pid": "0x2222",
        "device_version": "0.0.1"
    },
    "processor": "atmega32u4",
    "bootloader": "atmel-dfu",
    "features": {
        "bootmagic": true,
        "encoder": true,
        "extrakey": true,
        "mousekey": true,
        "nkro": true
    },
    "qmk": {
        "locking": {
            "enabled": true,
            "resync": true
        }
    },
    "matrix_pins": {
        "cols": ["D3", "D4", "D6"],
        "rows": ["E6", "B7", "D0"]
    },
    "diode_direction": "COL2ROW",
    "encoder": {
        "rotary": [
            {"pin_a": "F0", "pin_b": "F1"}
        ]
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"label": "Play", "matrix": [0, 0], "x": 0, "y": 0},
                {"label": "Mute", "matrix": [0, 1], "x": 1.5, "y": 0.5},
                {"label": "Next", "matrix": [1, 0], "x": 0, "y": 1},
                {"label": "Prev", "matrix": [2, 0], "x": 0, "y": 2},
                {"label": "Left", "matrix": [2, 1], "x": 1, "y": 2},
                {"label": "Rght", "matrix": [2, 2], "x": 2, "y": 2}
            ]
        }
    }
}
