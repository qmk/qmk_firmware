  "rgb_matrix": {
    "animations": {
      "gradient_up_down": true,
      "gradient_left_right": true,
      "breathing": true,
      "band_val": true,
      "cycle_all": true,
      "cycle_left_right": true,
      "cycle_up_down": true,
      "cycle_out_in_dual": true,
      "cycle_pinwheel": true,
      "dual_beacon": true,
      "hue_breathing": true,
      "hue_pendulum": true,
      "hue_wave": true,
      "pixel_flow": true,
      "pixel_fractal": true,
      "typing_heatmap": true,
      "digital_rain": true,
      "solid_reactive": true,
      "solid_reactive_wide": true,
      "solid_reactive_multiwide": true,
      "solid_reactive_nexus": true,
      "solid_reactive_multinexus": true,
      "splash": true,
      "multisplash": true,
      "solid_splash": true,
      "solid_multisplash": true
