  "debounce": 3,
  "layouts": {
    "LAYOUT_ortho_2x4": {
      "layout": [
        {"x": 0, "y": 0, "matrix": [0, 0]},
        {"x": 1, "y": 0, "matrix": [0, 1]},
        {"x": 2, "y": 0, "matrix": [0, 2]},
        {"x": 3, "y": 0, "matrix": [0, 3]},

        {"x": 0, "y": 1, "matrix": [1, 0]},
        {"x": 1, "y": 1, "matrix": [1, 1]},
        {"x": 2, "y": 1, "matrix": [1, 2]},
        {"x": 3, "y": 1, "matrix": [1, 3]}
