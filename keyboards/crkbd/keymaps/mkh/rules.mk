RGB_MATRIX_ENABLE = yes
RGB_MATRIX_TYPING_HEATMAP_ENABLE = yes
RGB_MATRIX_DIGITAL_RAIN_ENABLE = yes

# Enable tap dance (for multi-function keys)
TAP_DANCE_ENABLE = yes

# Enalbe Dynamic Tapping Term
DYNAMIC_TAPPING_TERM_ENABLE = yes

# Enable one-shot modifiers/layers
ONESHOT_ENABLE = yes

# Enable mouse keys (for cursor movement)
MOUSEKEY_ENABLE = yes

# Enable extra keycodes (media, system, etc.)
EXTRAKEY_ENABLE = yes

# Enable Unicode input
UNICODE_ENABLE = yes

# Enable custom user space (if you want to share code between keymaps)
USERSPACE_ENABLE = yes

# Enable key lock (for sticky keys)
KEY_LOCK_ENABLE = yes

# Enable auto shift (hold a key for shift)
AUTO_SHIFT_ENABLE = no

# Enable CAPS Word Toggle
CAPS_WORD_ENABLE = yes
