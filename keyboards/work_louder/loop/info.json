{
    "keyboard_name": "Loop Pad",
    "manufacturer": "Work Louder",
    "url": "https://worklouder.cc/",
    "maintainer": "Work Louder",
    "usb": {
        "vid": "0x574C",
        "pid": "0x1DF9",
        "max_power": 100
    },
    "rgb_matrix": {
        "driver": "ws2812"
    },
    "matrix_pins": {
        "cols": ["B3", "B2", "B1", "D6", "D7", "B4", "B5", "B6", "C6", "C7", "F7", "F6"],
        "rows": ["F5"]
    },
    "diode_direction": "COL2ROW",
