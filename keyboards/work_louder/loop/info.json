        "rotary": [
            {"pin_a": "D0", "pin_b": "D1"},
            {"pin_a": "D2", "pin_b": "D3"},
            {"pin_a": "D5", "pin_b": "D4"}
        ]
    },
    "bootmagic": {
        "matrix": [0, 11]
    },
    "ws2812": {
        "pin": "F1"
    },
    "rgblight": {
        "max_brightness": 120,
        "sleep": true,
        "animations": {
            "breathing": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "snake": true,
            "knight": true,
            "christmas": true,
            "static_gradient": true,
            "twinkle": true
        }
