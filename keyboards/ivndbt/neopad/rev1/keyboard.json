{
    "keyboard_name": "neopad",
    "manufacturer": "ivndbt",
    "url": "https://github.com/ivndbt/neopad)",
    "maintainer": "ivndbt",
    "usb": {
        "vid": "0x6961",
        "pid": "0x3031",
        "device_version": "0.1.0"
    },
    "features": {
        "bootmagic": true,
        "console": true,
        "encoder": true,
        "extrakey": true,
        "key_lock": true,
        "mousekey": true,
        "nkro": false
    },
    "matrix_pins": {
        "cols": ["B3", "B2", "B6"],
        "rows": ["F4", "F5"]
    },
    "diode_direction": "COL2ROW",
    "encoder": {
        "rotary": [
            {"pin_a": "D1", "pin_b": "D0"},
            {"pin_a": "D4", "pin_b": "C6"}
        ]
    },
    "development_board": "promicro",
    "tapping": {
        "toggle": 2
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 1], "x": 1, "y": 0},
                {"matrix": [0, 2], "x": 2, "y": 0},

                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1},
                {"matrix": [1, 2], "x": 2, "y": 1}
            ]
        }
    }
}
