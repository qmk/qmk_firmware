 /* #define MATRIX_COL_PINS { F4, F5, F6, F7, B1, NO_PIN, B2 } */
#undef MATRIX_COL_PINS
#define SWITCH_MATRIX_INPUT_0 \
    /* ( ( <port>, <mask>, <dev> ), ... ) */ \
    ( (F0, 0xf0, MCU_GPIO), \
      (B0, 0x06, MCU_GPIO) ),\
    /* ( ( <port_index>, <port_mask>, <matrix_row_mask> ), ... ) */ \
    ( (0, 0x10, 0x01), \
      (0, 0x20, 0x02), \
      (0, 0x40, 0x04), \
      (0, 0x80, 0x08), \
      (1, 0x02, 0x10), \
      (1, 0x04, 0x40) )

 /* #define MATRIX_ROW_PINS { D4, C6, D7, NO_PIN, B4 } */
#undef MATRIX_ROW_PINS
#define SWITCH_MATRIX_OUTPUT_0 \
    /* ( ( <port>, <mask>, <dev> ), ... ) */ \
    ( (D0, 0x90, MCU_GPIO), \
      (C0, 0x40, MCU_GPIO), \
      (B0, 0x10, MCU_GPIO) ),\
    /* ( ( <port_index>, <port_mask>, <matrix_row_mask> ), ... ) */ \
    ( (0, 0x10, 0x01), \
      (1, 0x40, 0x02), \
      (0, 0x80, 0x04), \
      (0, 0x00, 0x00), \
      (2, 0x10, 0x10) )

 /* #define MATRIX_COL_PINS_RIGHT { F4, F5, F6, F7, B3, NO_PIN, B2 } */
#undef MATRIX_COL_PINS_RIGHT
#define SWITCH_MATRIX_INPUT_1 \
    /* ( ( <port>, <mask>, <dev> ), ... ) */ \
    ( (F0, 0xf0, MCU_GPIO), \
      (B0, 0x0c, MCU_GPIO) ),\
    /* ( ( <port_index>, <port_mask>, <matrix_row_mask> ), ... ) */ \
    ( (0, 0x10, 0x01), \
      (0, 0x20, 0x02), \
      (0, 0x40, 0x04), \
      (0, 0x80, 0x08), \
      (1, 0x08, 0x10), \
      (1, 0x04, 0x40) )

 /* #define MATRIX_ROW_PINS_RIGHT { D4, C6, E6, NO_PIN, B4 } */
#undef MATRIX_ROW_PINS_RIGHT
#define SWITCH_MATRIX_OUTPUT_1 \
    /* ( ( <port>, <mask>, <dev> ), ... ) */ \
    ( (D0, 0x10, MCU_GPIO), \
      (C0, 0x40, MCU_GPIO), \
      (E0, 0x40, MCU_GPIO), \
      (B0, 0x10, MCU_GPIO) ),\
    /* ( ( <port_index>, <port_mask>, <matrix_row_mask> ), ... ) */ \
    ( (0, 0x10, 0x01), \
