# Enable Bootmagic Lite to consistently reset to bootloader and clear EEPROM.
BOOTMAGIC_ENABLE = lite

# Enable mouse and media keys on all keyboards.
MOUSEKEY_ENABLE = yes
EXTRAKEY_ENABLE = yes

# Disable some unwanted features on all keyboards.
CONSOLE_ENABLE = no
COMMAND_ENABLE = no
NKRO_ENABLE = no
UNICODE_ENABLE = no
API_SYSEX_ENABLE = no
